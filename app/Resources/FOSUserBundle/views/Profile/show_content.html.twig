{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p><a href="{{ path('fos_user_change_password') }}">Change password</a></p>
    <p><a href="{{ path('fos_user_resetting_request') }}">Reset password</a></p>
    {#<button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>#}
</div>

<div class="row">
    <!-- thumbnail -->
    <div class="col-md-2 offset-2">
        <i class="mdi mdi-account-circle"></i>
        <i class="material-icons">dashboard</i>
    </div>

    <!-- info -->
    <div class="col-md-6">
        <h1>{{ user.username }}</h1>
        <h3>{{ user.firstName ~ ' ' ~ user.lastName }}</h3>
    </div>
</div>
